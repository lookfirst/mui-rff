{
	"include": ["."],
	"exclude": ["dist", "node_modules", "example"],
	"compilerOptions": {
		"rootDir": ".",
		"composite": true,
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"target": "ES2020",
		"allowImportingTsExtensions": true,
		"moduleResolution": "bundler",
		"alwaysStrict": true,
		"strict": true,
		"importHelpers": true,
		"declaration": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"baseUrl": "./src",
		"paths": {
			"*": ["src/*", "node_modules/*"]
		},
		"strictNullChecks": true
	}
}
